<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.bitcoinconvert.ConversionActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BTC"
        android:fontFamily="casual"
        android:textSize="18sp"
        app:layout_editor_absoluteX="28dp"
        app:layout_editor_absoluteY="30dp"
        android:layout_marginLeft="28dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="27dp" />

    <TextView
        android:id="@+id/currency_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_editor_absoluteX="75dp"
        app:layout_editor_absoluteY="55dp"
        android:layout_marginLeft="54dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="55dp"
        android:fontFamily="casual"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/currencyBtcEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Local Currency"
        android:inputType="number"
        app:layout_editor_absoluteX="151dp"
        app:layout_editor_absoluteY="55dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="55dp" />

    <TextView
        android:id="@+id/bitcoinTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        app:layout_editor_absoluteX="151dp"
        app:layout_editor_absoluteY="129dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/currencyBtcEditText"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/currencyEthEditText"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ETH"
        android:fontFamily="casual"
        android:textSize="18sp"
        app:layout_editor_absoluteX="28dp"
        app:layout_editor_absoluteY="267dp"
        android:layout_marginLeft="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/currencyName"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/currencyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:fontFamily="casual"
        android:textSize="18sp"
        app:layout_editor_absoluteY="296dp"
        app:layout_editor_absoluteX="75dp"
        android:layout_marginLeft="54dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="116dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/currencyEthEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Local Currency"
        android:inputType="number"
        app:layout_editor_absoluteY="296dp"
        app:layout_editor_absoluteX="153dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="45dp"
        app:layout_constraintBottom_toTopOf="@+id/ethreumTextView" />

    <TextView
        android:id="@+id/ethreumTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        app:layout_editor_absoluteY="384dp"
        app:layout_editor_absoluteX="153dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="87dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="78dp"
        android:layout_height="80dp"
        app:srcCompat="@mipmap/bitcoin_logo"
        app:layout_editor_absoluteX="28dp"
        app:layout_editor_absoluteY="81dp"
        android:layout_marginLeft="28dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/currency_name" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="82dp"
        android:layout_height="82dp"
        app:srcCompat="@mipmap/ethereum"
        app:layout_editor_absoluteX="28dp"
        app:layout_editor_absoluteY="339dp"
        android:layout_marginLeft="28dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/currencyName"
        app:layout_constraintRight_toLeftOf="@+id/ethreumTextView"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.023" />
</android.support.constraint.ConstraintLayout>
